<div
  class="text-white container d-flex justify-content-center align-items-center text-center bg-danger rounded w-75 vh-75 mt-5"
>
  <div class="row w-75">
    <h1 class="text-decoration-underline">HOME</h1>
    <h2>Renderizado de productos desde Handlebars.</h2>
    <div class="col">
      <h3>Productos:</h3>
      <div>
        <h1>{{user.firstName}}</h1>
        <p>{{user.lastName}}</p>
        <p>{{user.email}}</p>
        <p>{{user.role}}</p>
      </div>
      <ol class="bg-warning rounded text-black">
        {{#each docs}}
          <li class="m-4">{{this.title}},
            {{this.description}},
            {{this.code}},
            {{this.price}},
            {{this.stock}},
            {{this.category}},
            {{this.status}},
            {{this.thumbnail}},
          </li>
        {{/each}}
      </ol>
    </div>
  </div>
</div>