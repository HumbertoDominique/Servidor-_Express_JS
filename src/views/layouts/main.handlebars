<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
    />
      <link
      rel="stylesheet"
      href="css/styles.css"
    />
    <title>Servidor HDominique</title>
  </head>
  <body class="bgBody">
      <nav class="navbar bgNavbar">
          <div class="col-1 d-flex justify-content-center align-items-center"><a class="navbar-brand" href="/products">
            <img
                src="https://res.cloudinary.com/dkrenmz5w/image/upload/v1687031477/restaurant_g0hj6w.png"
                alt="Logo"
                width="50"
                height="50"
                class="d-inline-block align-text-start"
              />
            </a></div>
        <div class="col-11 d-flex">
          {{#if user}}
              <div class="col-10 d-flex justify-content-center align-items-center flex-wrap">
                <div class="col-12 d-flex justify-content-center">
                  <span class="navbar-text fs-3 text-center">
                    ¡Bienvenido
                    {{user.firstName}}!
                  </span>
                </div>
                <div>
                  <span class="navbar-text fs-5">
                    Roll de usuario:
                    {{user.roll}}
                  </span>
                </div>
              </div>
              <div class="col-2 d-flex justify-content-center align-items-center">
                <div class="d-flex align-items-center">
                  <form action="/api/users/logout" method="post">
                    <button type="submit" class="btn btn-warning mt-3">Cerrar Sesión</button>
                  </form>
                </div>
              </div>
            {{else}}
              <div class="col-12 d-flex justify-content-end align-items-center">
                <form action="/login" method="get">
                  <button type="submit" class="btn btn-warning mt-3 me-4">Iniciar Sesión</button>
                </form>
              </div>
            {{/if}}</div>
            </div>
      </nav>
      {{#if isAdmin}}
        <div class="container-fluid adminBox text-white text-center mt-4 mb-4">
          <h1 class="fs-3">USTED ES ADMINISTRADOR</h1>
        </div>
      {{/if}}
    {{{body}}}
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>