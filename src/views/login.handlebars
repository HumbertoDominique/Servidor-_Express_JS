<div class="d-flex justify-content-center align-items-top flex-wrap">
  <div
    class="d-flex container-fluid justify-content-center align-items-center mt-5"
  >
    <div>
      <video autoplay muted loop class="video" width="310px" height="310px">
        <source
          src="https://res.cloudinary.com/dkrenmz5w/video/upload/v1687031497/pexels-cottonbro-cg-studio-8819433-1080x1080-25fps_fzxpcy.mp4"
          type="video/mp4"
        />
      </video>
    </div>
    <div class="w-50 h-100 text-white rounded-end p-1 bgLogin">
      <h1 class="text-center">Iniciar sesión</h1>
      <form action="api/users/auth" method="post" class="mt-4">
        <div class="mb-3 w-100 ps-5 pe-5">
          <input
            type="email"
            class="form-control"
            placeholder="Ingrese su Email"
            aria-describedby="email"
            name="email"
          />
        </div>
        <div class="mb-3 w-100 ps-5 pe-5">
          <input
            type="password"
            class="form-control"
            placeholder="Ingrese su Contraseña"
            aria-describedby="password"
            name="password"
          />
        </div>
        <div class="d-flex justify-content-center w-100 mt-2">
          <button type="submit" class="btn btn-warning">Iniciar sesión</button>
        </div>
      </form>
      <div class="d-flex register justify-content-center align-items-center">
        <span>¿No has creado una cuenta?</span>
        <span class="ms-5">Regístrate aqui</span>
        <a href="/register"><button
            class="btn btn-warning ms-3 register"
          >Registrarse</button></a>
      </div>
      <div class="d-flex justify-content-center align-items-center mt-1">
        <a href="/api/sessions/github">
          <button class="btn btn-light btnGithub">Entrar con Github</button>
        </a>
      </div>
    </div>
  </div>
</div>