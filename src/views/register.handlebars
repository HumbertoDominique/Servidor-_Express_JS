<div
  class="d-flex justify-content-center align-items-top flex-wrap container mt-5 registerBox"
>
  <div
    class="col-6 h-100 bgLogin rounded-start d-flex justify-content-center flex-wrap formBox"
  >
    <h1 class="fs-2 w-100 text-center text-white mt-2">Regístrate</h1>
    <form action="api/users/" method="post">
      <div class="mb-2 w-100 d-flex justify-content-center align-items-center">
        <input
          type="text"
          class="form-control"
          placeholder="Ingrese su Nombre"
          aria-describedby="firstName"
          name="firstName"
        />
      </div>
      <div class="mb-2 w-100">
        <input
          type="text"
          class="form-control"
          placeholder="Ingrese su Apellido"
          aria-describedby="lastName"
          name="lastName"
        />
      </div>
      <div class="mb-2 w-100">
        <input
          type="email"
          class="form-control"
          placeholder="Ingrese su Email"
          aria-describedby="email"
          name="email"
        />
      </div>
      <div class="mb-2 w-100">
        <input
          type="password"
          class="form-control"
          placeholder="Ingrese su Contraseña"
          aria-describedby="password"
          name="password"
        />
      </div>
      <div class="d-flex justify-content-center w-100 flex-wrap">
        <div class="w-100 d-flex justify-content-center">
          <button type="submit" class="btn btn-warning">Registrarse</button>
        </div>
        <div
          class="d-flex justify-content-center align-items-center mt-2 register"
        >
          <span>¿Ya tienes cuenta?</span>
          <span class="ms-3">Inicia sesión aqui</span>
          <a href="/login"><button
              class="btn btn-warning ms-3 register"
              type="button"
            >Iniciar sesión</button></a>
        </div>
      </div>
    </form>
  </div>
  <div class="col-1">
    <video autoplay muted loop class="video" width="190px" height="350px">
      <source
        src="https://res.cloudinary.com/dkrenmz5w/video/upload/v1687194339/pexels-cottonbro-cg-studio-8818611-1080x1920-25fps_lafrut.mp4"
        type="video/mp4"
      />
    </video>
  </div>
</div>